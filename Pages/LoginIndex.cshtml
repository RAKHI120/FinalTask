@page
@model Task1CRUD.Pages.LoginIndexModel

   

<form method="post" asp-page="LoginIndex">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group row">
        <div class="col-3">
            <label asp-for="@Model.Username"></label>
        </div>
        <div class="col-5">
            <input type="text" asp-for="@Model.Username" maxlength="40" required />
        </div>
        <span class="text-danger" asp-validation-for="@Model.Username"></span>
    </div>

    <div class="form-group row">
        <div class="col-3">
            <label asp-for="@Model.Password"></label>
        </div>
        <div class="col-5">
            <input type="password" asp-for="@Model.Password" typeof="password" required />
        </div>
        <span class="text-danger" asp-validation-for="@Model.Password"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Login" />
        </div>
    </div>
</form>
